---
import { Button } from "@workspace/ui/components/button"
import '@workspace/ui/globals.css';
import Header from '../components/Header.astro';
---

<html lang="en" class="min-h-screen bg-background">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>ShipFast - Build SaaS Fast</title>
	</head>
	<body class="min-h-screen flex flex-col">
		<Header />
		<main class="flex-1 flex flex-col items-center justify-center px-4 py-16 md:py-24">
			<div class="container max-w-4xl mx-auto text-center space-y-8">
				<h1 class="text-4xl md:text-6xl font-bold tracking-tight">
					Build Your SaaS
					<span class="text-primary">Faster</span> Than Ever
				</h1>
				<p class="text-xl text-muted-foreground max-w-2xl mx-auto">
					ShipFast provides everything you need to launch your SaaS business quickly and efficiently.
					Focus on your product while we handle the rest.
				</p>
				<div class="flex flex-wrap gap-4 justify-center pt-4">
					<Button size="lg" class="px-8" client:load>
						Get Started
					</Button>
					<Button variant="outline" size="lg" client:load>
						Learn More
					</Button>
				</div>
			</div>
		</main>
	</body>
</html>
